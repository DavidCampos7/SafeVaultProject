@model SafeVault.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Register Now";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
        <div class="card shadow-lg p-4 mt-5">
            <div class="card-body">
                <h1 class="card-title text-center mb-4 text-primary">
                    <i class="bi bi-person-plus-fill me-2"></i> Create Your Account
                </h1>
                <p class="card-text text-center text-muted mb-4">
                    Join our community! Fill out the form below to get started.
                </p>

                <form asp-controller="AccountMvc" asp-action="Register" method="post">
                    
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="UserName" class="form-label visually-hidden">Username</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-person-fill"></i></span>
                            <input asp-for="UserName" type="text" class="form-control" 
                                   placeholder="Choose a Username" required 
                                   aria-describedby="usernameHelp" minlength="3">
                        </div>
                        <div id="usernameHelp" class="form-text">Choose a unique username (min 3 characters).</div>
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label visually-hidden">Email address</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-envelope-fill"></i></span>
                            <input asp-for="Email" type="email" class="form-control" 
                                   placeholder="Enter your Email" required 
                                   aria-describedby="emailHelp">
                        </div>
                        <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Password" class="form-label visually-hidden">Password</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-lock-fill"></i></span>
                            <input asp-for="Password" type="password" class="form-control" 
                                   placeholder="Create a Password" required 
                                   aria-describedby="passwordHelp" minlength="12"> </div>
                        <div id="passwordHelp" class="form-text">Password must meet complexity requirements (min 12 characters, uppercase, lowercase, digit, symbol).</div>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-lg mt-3">
                            <i class="bi bi-box-arrow-in-right me-2"></i> Register
                        </button>
                    </div>
                </form>

                <div class="text-center mt-4">
                    <p class="text-muted">Already have an account? <a href="#">Login here</a>.</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}